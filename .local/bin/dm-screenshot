#!/bin/sh

# This is bound to Shift+PrintScreen by default, requires maim. It lets you
# choose the kind of screenshot to take, including copying the image or even
# highlighting an area to copy. scrotcucks on suicidewatch right now.
# https://github.com/LukeSmithxyz/voidrice/blob/master/.local/bin/maimpick

case "$(printf "a selected area (local)\\na selected area (copy)\\na selected area (upload)\\ncurrent window (copy)" | dmenu -l 6 -i -p "Screenshot which area?")" in
    "a selected area (local)") maim -s ~/screenshot/pic-selected-"$(date '+%y%m%d-%H%M-%S').png" ;;
	"a selected area (copy)") maim -s | xclip -selection clipboard -t image/png ;;
	"current window (copy)") maim -i "$(xdotool getactivewindow)" | xclip -selection clipboard -t image/png ;;
    "a selected area (upload)") maim -s /tmp/screenshot.png; imgur /tmp/screenshot.png | xclip -selection clipboard ;;
esac
